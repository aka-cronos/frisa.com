.homeAbout // SHAME /////////////////////////////////
  clear fix
  padding-top 6rem
  padding-bottom 6rem
  background url('/img/home-about-bg.jpg') center no-repeat
  background-size cover
  text-align center
  
  +below(1120px)
    wrapped(95%)
  
  p
    lost-center 500px
    color white
    
  .title--white
    display block
    

.home-industries
  wrapped(80%)
  padding-top 6rem
  padding-bottom 6rem
  text-align center
  
  +below(1120px)
    wrapped(95%)
    
  &__list
    lost-flex-container row
    margin 0
    padding 0
    list-style none
    
  &__item
    lost-column 1/6
    
    &:hover img
      position relative
      transform scale(1.1)
      
    
    +below(1120px)
      lost-column 1/3
      margin-bottom 2em
      
    +below(500px)
      lost-column 1/1
    
    &-link
      display block
      text-decoration none
      
      span
        color $frisa__red
        font-weight 600
      
    &-img
      display block
      overflow hidden
      width 150px
      height 150px
      margin-bottom 1.5em
      margin-right auto
      margin-left auto
      border-radius 50%
      background-color red
      transition 350ms all ease-in-out
      
.home-actions
  display flex
  
  +below(600px)
    flex-direction column

  &__item
    lost-column 1/2 2 0 flex
    padding 6rem
    color white
    text-align center
    text-decoration none
        
    +below(900px)
      lost-column 1/1 1 0 no-flex
      padding 4rem 2rem
    
    &--quote
      background url('/img/home-quote.jpg') center no-repeat
      background-size cover
      
    &--careers
      background url('/img/home-careers.jpg') center no-repeat
      background-size cover
      
.home-actions
  h4
    margin-bottom 1rem
    font-size 2rem
    
  p
    font-size 1.5rem