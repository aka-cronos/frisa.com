.facilities
  wrapped()
  clear fix
  padding-top 2rem
  padding-bottom 2rem
  
  +below(900px)
    wrapped(90%)

  &-item
    lost-column 1/4 4 no-flex
    
    &:hover img
      transform scale(1.1)
    
    +below(1120px)
      lost-column 1/3 3 no-flex

    +below(900px)
      lost-column 1/2 2 no-flex

    +below(600px)
      lost-column 1/1 1 no-flex
    
    img
      position relative
      display block
      width 100%
      transition 350ms all ease-in-out
      
    & .title
    & .text
      opacity .3
      transition 300ms all ease-in-out
      
      +below(900px)
        opacity 1
      
  &-item:hover
    
    & .title
    & .text
      opacity 1
