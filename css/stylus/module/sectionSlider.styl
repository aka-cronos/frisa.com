.sectionSlider
  order 2
  
  +below(900px)
    order 3

.gallery-trigger
  position relative
  display block
  margin-bottom 1rem
  padding-right 2.5rem
  color $frisa__grey
  text-align right
  text-decoration none
  
  &:after
    position absolute
    right 0
    bottom 0
    content url(/img/gallery-icon.png)

.sliderFixed
  position fixed
  top 20%
  right 20%
  bottom 20%
  left 20%
  
  &:before
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    content ''
    background-color rgba(black, .8)

    
    