.main-header // SHAME /////////////////////////////////
  wrapped()
  clear fix
  width 100%
  border-top 3px solid $frisa__grey
  background-color rgba($frisa__red, .9)
  z-index 10
  
  &--body
    position fixed
  
  +below(1120px)  
    wrapped(95%)

  &__logo
    display block
    float left
    width 76px
    
    img
      display block
      width 100%
      
.main-nav
  float left
  margin-left 100px
  clearfix()
    
  &__menu
    clearfix()
    margin 0
    padding 0
    list-style none
    
    &-item
      position relative
      float left
      margin-right 1em
      margin-left 1em
      align-items center
      display flex
      height 99px
      
      &:first-child
        margin-left 0
        
      &:hover .main-nav__dropdown
        display block
  
  &__dropdown
    position absolute
    top 100%
    left 50%
    display none
    padding 0
    transform translateX(-50%)
    min-width 220px
    background-color rgba(white, .9)
    list-style none
    
    li
      padding .5em 1.5em
      border-bottom 1px solid lighten($frisa__grey, 50%)
      
      &:hover
        background-color lighten($frisa__grey, 50%)
      
      &:last-child
        border-bottom 0

    a
      color $frisa__dark-grey
      display block
      text-decoration none
        
  &__link
    position relative
    padding 2.5em .5em
    display block
    color white
    text-decoration none
    
    &:before
      position absolute
      bottom 0
      left 0
      display block
      width 100%
      height 0
      background-color white
      content ''
      transition 350ms all ease
    
    &:hover:before
      height 4px
      content ''
          
.main-nav-actions
  display flex
  float right
  align-items center
  height 99px
  
.efrisa-logo
  @extend .main-header__logo
  
  & img
    @extend .main-header__logo img
    
.search
  display none
  
.basic-link
  color white
  font-weight 400