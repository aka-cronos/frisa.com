.sectionPreview-container
  wrapped()
  clear fix
  padding-top 4rem
  padding-bottom 4rem
  text-align center
  
  &.industries .sectionPreview
    lost-waffle 1/3
    
  &.products .sectionPreview
    lost-waffle 1/4

  &.industries .sectionPreview    
  &.products .sectionPreview
    
    +below(800px)
      lost-waffle 1/2
      
    +below(600px)
      lost-waffle: 1

.sectionPreview
  position relative
  min-height 200px
  background-color tomato
  color white
  text-decoration none  
  
  &-info
    display flex
    flex-direction column
    justify-content center
    align-items center
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba($frisa__red, 0)
    transition 300ms all ease-in-out
  
  &-title
    font-size 1.25rem
    margin 0
  
  &-description
    display none
    margin-top 1rem
    margin-bottom 0
    
  &:hover .sectionPreview-info
    background-color rgba($frisa__red, 1)
    
  &:hover .sectionPreview-description
    display block
    
  &.aerospace
    background url('/img/industries/aerospace-preview.jpg') center no-repeat
    background-size cover

  &.constructionandmining
    background url('/img/industries/constructionandmining-preview.jpg') center no-repeat
    background-size cover

  &.industrialmachinery
    background url('/img/industries/industrialmachinery-preview.jpg') center no-repeat
    background-size cover

  &.oilandgas
    background url('/img/industries/oilandgas-preview.jpg') center no-repeat
    background-size cover

  &.powergeneration
    background url('/img/industries/powergeneration-preview.jpg') center no-repeat
    background-size cover

  &.windpower
    background url('/img/industries/windpower-preview.jpg') center no-repeat
    background-size cover
