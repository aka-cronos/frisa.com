.sectionPreview-container
  wrapped()
  clear fix
  padding-top 4rem
  padding-bottom 4rem
  text-align center
  
  &.industries .sectionPreview
    lost-waffle 1/3
    
  &.products .sectionPreview
    lost-waffle 1/4

  &.industries .sectionPreview    
  &.products .sectionPreview
    
    +below(800px)
      lost-waffle 1/2
      
    +below(600px)
      lost-waffle: 1

.sectionPreview
  position relative
  min-height 200px
  color white
  text-decoration none
    
  &-info
    display flex
    flex-direction column
    justify-content center
    align-items center
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    padding 1rem
    background-color rgba($frisa__red, 0)
    transition 300ms all ease-in-out
  
  &-title
    font-size 1.25rem
    margin 0
  
  &-description
    display none
    margin-top 1rem
    margin-bottom 0
    
  &:hover .sectionPreview-info
    background-color rgba($frisa__red, .8)
    
  &:hover .sectionPreview-description
    display block
    
  &.rolled-rings
    background url('/img/products/rolled-rings-preview.jpg') center no-repeat
    background-size cover

