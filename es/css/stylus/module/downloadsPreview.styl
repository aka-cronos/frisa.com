.downloads
  wrapped()
  margin-top 4rem
  margin-bottom 4rem
  
  +below($desktop)
    wrapped(90%)
  
  &-preview
    clear fix
    height 100%
  
  &-previewItem
    lost-column 1/4
    margin-bottom 2rem
    text-decoration none
    +below($desktop)
      lost-column 1/3
    +below($mobile)
      lost-column 1

    
    &:hover .downloads-previewImg
      shadow()

    .downloads-item
      margin-top 1rem
      border-top 0

  &-previewImg
    margin 0
    width 180px
    +below($mobile)
      width 90%
      margin-right auto
      margin-left auto
    
    img
      display block
      width 100%